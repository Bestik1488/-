local HttpService = game:GetService("HttpService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Список разрешенных никнеймов (добавьте нужные никнеймы)
local ALLOWED_USERNAMES = {
    "YourUsername",  -- Замените на ваш никнейм
    "Player2",       -- Добавьте еще 4 никнейма
    "Player3",
    "Player4", 
    "Player5"
}

-- Функция проверки никнейма (независимо от регистра)
local function CheckUsername()
    local playerName = LocalPlayer.Name:lower() -- приводим к нижнему регистру
    
    for _, allowedName in pairs(ALLOWED_USERNAMES) do
        -- Сравниваем в нижнем регистре
        if playerName == allowedName:lower() then
            return true
        end
    end
    
    -- Выводим отладочную информацию
    warn("Player name: " .. playerName)
    warn("Allowed names:")
    for i, name in ipairs(ALLOWED_USERNAMES) do
        warn(i .. ". " .. name:lower())
    end
    
    return false
end

-- Проверка при запуске скрипта
if not CheckUsername() then
    Library:Notify("❌ Access Denied: You are not authorized to use this script.", 5)
    task.wait(2)
    LocalPlayer:Kick("❌ Access Denied: You are not authorized to use this script.")
    return -- Останавливаем выполнение скрипта
end
